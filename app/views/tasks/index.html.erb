<h1>Tasks</h1>

<%= search_form_for @q, url: tasks_path, method: :get do |f| %>
  <div>
    <%= f.label :title_or_description_cont, 'キーワード' %>
    <%= f.text_field :title_or_description_cont %>
  </div>

  <div>
    <%= f.label :deadline_gteq, '期間' %>
    <%= f.date_field :deadline_gteq %>
    〜
    <%= f.date_field :deadline_lteq %>
  </div>

  <div>
    <%= f.label :status_eq, 'ステータス' %>
    <div>
      <%= f.radio_button :status_eq, '', checked: params.dig(:q, :status_eq).blank?, id: 'status_blank' %>
      <%= label_tag 'status_blank', '指定なし' %>

      <%= f.radio_button :status_eq, 'todo', id: 'status_todo' %>
      <%= label_tag 'status_todo', 'todo' %>

      <%= f.radio_button :status_eq, 'doing', id: 'status_doing' %>
      <%= label_tag 'status_doing', 'doing' %>

      <%= f.radio_button :status_eq, 'done', id: 'status_done' %>
      <%= label_tag 'status_done', 'done' %>
    </div>
  </div>

  <%= f.submit 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th><%= sort_link(@q, :deadline, 'Deadline') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>